# Frontend .env.example (Vite)
# Copie para .env.local ou .env e ajuste valores reais.

# Base da API (apontar para backend Express)
VITE_API_URL="http://localhost:4000"

# Flags de funcionalidade (utilize conforme necessidade)
VITE_FEATURE_PAGINATION_ENFORCED="false"  # espelho de REQUIRE_PAGINATION do backend
VITE_DEFAULT_PAGE_SIZE="9"
VITE_DEBUG_API="false"
VITE_DEBUG_RESERVATIONS="false"

# Ajustes de UI / métricas (exemplos)
VITE_SLOW_REQUEST_MS="800"  # usado para exibir avisos UI opcionais

